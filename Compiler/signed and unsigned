def unsigned_to_signed(unsigned_int):
    if unsigned_int > 127:
        return unsigned_int - 256
    else:
        return unsigned_int

# Test the function
unsigned_int = 128
signed_int = unsigned_to_signed(unsigned_int)
print(f"The signed representation of {unsigned_int} is {signed_int}.")




def signed_to_unsigned(signed_int):
    if signed_int < 0:
        return signed_int + 256
    else:
        return signed_int

# Test the function
signed_int = -128
unsigned_int = signed_to_unsigned(signed_int)
print(f"The unsigned representation of {signed_int} is {unsigned_int}.")
